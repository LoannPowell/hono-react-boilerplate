{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@your-org/config": ["../../packages/config"],
      "@your-org/database": ["../../packages/database"],
      "@your-org/shared": ["../../packages/shared"]
    }
  },
  "include": ["**/*.ts", "../../packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
